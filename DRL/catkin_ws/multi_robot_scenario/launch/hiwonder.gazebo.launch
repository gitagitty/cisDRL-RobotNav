<launch>

  <arg name="robot_name" default="p3dx" />
  <arg name="robot_position" default="-x -1.0 -y 5.0 -z 0.01" />



    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find hiwonder_description)/urdf/jetacker.gazebo.xacro' odom_frame:=hiwonder/odom base_frame:=hiwonder/base_link lidar_frame:=lidar_link"/>

    <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -param robot_description -model $(arg robot_name) $(arg robot_position) " />


    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
      <param name="publish_frequency" type="double" value="30.0"/>
      <!--<param name="tf_prefix" type="string" value="$(arg robot_name)"/>-->
    </node>

  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher">
      <param name="publish_frequency" type="double" value="30.0"/>
  </node>

  <include file="$(find hiwonder_gazebo)/launch/ros_controllers.launch"/>

</launch>
